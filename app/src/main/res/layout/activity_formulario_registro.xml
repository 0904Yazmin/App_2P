<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regis1"
    tools:context=".Formulario_registro">

    <Switch
        android:id="@+id/idNotifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hind_guntur_medium"
        android:text="Activar notificaciones"
        android:textColor="#2C2C2C"
        android:textStyle="bold"
        android:thumbTint="#3F51B5"
        android:trackTint="#100F10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.857"
        tools:checked="false"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Button
        android:id="@+id/toLogin"
        android:layout_width="138dp"
        android:layout_height="50dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/hind_guntur_medium"
        android:text="@string/inicioSesionLabel"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.223"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.939" />

    <Button
        android:id="@+id/btnRegistrarme"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:fontFamily="@font/hind_guntur_medium"
        android:text="@string/ragistrarLabel"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toEndOf="@+id/toLogin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.947" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="139dp"
        android:layout_height="28dp"
        android:fontFamily="@font/hind_guntur_medium"
        android:text="Número celular   +52"
        android:textAlignment="textEnd"
        android:textColor="#2E2D2D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/idTel"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <RadioGroup
        android:id="@+id/idRadioG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.663"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592">

        <RadioButton
            android:id="@+id/idMasculino"
            android:layout_width="110dp"
            android:layout_height="49dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/hind_guntur_medium"
            android:text="Hombre"
            android:textColor="#2E2D2D"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="0dp" />

        <RadioButton
            android:id="@+id/idFemenino"
            android:layout_width="92dp"
            android:layout_height="49dp"
            android:fontFamily="@font/hind_guntur_medium"
            android:text="Mujer"
            android:textColor="#2E2D2D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="0dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="54dp"
        android:layout_height="27dp"
        android:fontFamily="@font/hind_guntur_medium"
        android:text="Sexo"
        android:textColor="#2E2D2D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.593" />

    <EditText
        android:id="@+id/idTel"
        android:layout_width="192dp"
        android:layout_height="49dp"
        android:ems="10"
        android:fontFamily="@font/hind_guntur_medium"
        android:hint="00 0000 0000"
        android:inputType="phone"
        android:paddingStart="9dp"
        android:textAlignment="textStart"
        android:textColor="#2E2D2D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/idFecha"
        android:layout_width="176dp"
        android:layout_height="52dp"
        android:backgroundTint="#3F51B5"
        android:drawableTint="#3F51B5"
        android:ems="10"
        android:fontFamily="@font/hind_guntur_medium"
        android:hint="00/00/00"
        android:inputType="date"
        android:textAlignment="center"
        android:textColor="#2E2D2D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.763"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.67" />

    <RadioGroup
        android:id="@+id/idChecks"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.801">

        <CheckBox
            android:id="@+id/idIndep"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginBottom="7dp"
            android:buttonTint="#3F51B5"
            android:checked="false"
            android:clickable="true"
            android:enabled="true"
            android:fontFamily="@font/hind_guntur_medium"
            android:text="Uso personal"
            android:textColor="#2E2D2D" />

        <CheckBox
            android:id="@+id/idDocen"
            android:layout_width="97dp"
            android:layout_height="44dp"
            android:layout_marginBottom="4dp"
            android:buttonTint="#3F51B5"
            android:checked="false"
            android:clickable="true"
            android:enabled="true"
            android:fontFamily="@font/hind_guntur_medium"
            android:text="Docente"
            android:textColor="#2E2D2D" />

        <CheckBox
            android:id="@+id/idAlum"
            android:layout_width="97dp"
            android:layout_height="44dp"
            android:buttonTint="#3F51B5"
            android:clickable="true"
            android:enabled="true"
            android:fontFamily="@font/hind_guntur_medium"
            android:text="Alumno"
            android:textColor="#2E2D2D" />
    </RadioGroup>

    <TextView
        android:id="@+id/tiposUsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hind_guntur_medium"
        android:text="Únete a Copernicus System como:"
        android:textColor="#2E2D2D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.737" />


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hind_guntur_medium"
        android:text="Fecha de nacimiento"
        android:textColor="#2E2D2D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/idFecha"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.668" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="Copernicus System"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.672"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:fontFamily="@font/hind_guntur_medium"
        android:text="Registro"
        android:textColor="#373737"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="42dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.645"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059"
        app:srcCompat="@drawable/morado" />

    <EditText
        android:id="@+id/idNombre"
        android:layout_width="330dp"
        android:layout_height="33dp"
        android:background="#F0F0F3"
        android:ems="10"
        android:fontFamily="@font/hind_guntur_medium"
        android:hint="Nombre de usuario"
        android:inputType="textPersonName"
        android:paddingStart="9dp"
        android:paddingTop="5dp"
        android:textAlignment="textStart"
        android:textColor="#2E2D2D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.21" />

    <EditText
        android:id="@+id/idPass"
        android:layout_width="330dp"
        android:layout_height="33dp"
        android:background="#F0F0F3"
        android:ems="10"
        android:fontFamily="@font/hind_guntur_medium"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:paddingStart="9dp"
        android:paddingTop="5dp"
        android:textAlignment="textStart"
        android:textColor="#2E2D2D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.345" />

    <EditText
        android:id="@+id/idPassConfirm"
        android:layout_width="330dp"
        android:layout_height="33dp"
        android:background="#F0F0F3"
        android:ems="10"
        android:fontFamily="@font/hind_guntur_medium"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:paddingStart="9dp"
        android:paddingTop="5dp"
        android:textAlignment="textStart"
        android:textColor="#2E2D2D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.416" />

    <EditText
        android:id="@+id/idEmail"
        android:layout_width="330dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:background="#F0F0F3"
        android:ems="10"
        android:fontFamily="@font/hind_guntur_medium"
        android:hint="Email"
        android:hyphenationFrequency="none"
        android:inputType="textEmailAddress"
        android:paddingStart="9dp"
        android:textAlignment="textStart"
        android:textColor="#2E2D2D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.268" />


</androidx.constraintlayout.widget.ConstraintLayout>